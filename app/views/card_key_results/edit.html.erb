<%= turbo_frame_tag "modal" do %>
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg shadow-xl max-w-md w-full mx-4">
      <div class="px-4 py-3 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">Record Actual Impact</h2>
        <p class="text-sm text-gray-500 mt-1"><%= @card_key_result.key_result.title %></p>
      </div>

      <%= form_with model: [@product, @card, @card_key_result], class: "p-4 space-y-4" do |form| %>
        <% if @card_key_result.errors.any? %>
          <div class="bg-red-50 border-l-4 border-red-400 p-4">
            <ul class="list-disc list-inside text-sm text-red-700">
              <% @card_key_result.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="bg-blue-50 rounded-lg p-3">
          <div class="text-sm text-gray-600">
            <strong>Objective:</strong> <%= @card_key_result.key_result.objective.title %>
          </div>
          <div class="mt-2 flex items-center space-x-2">
            <div class="flex-1 bg-gray-200 rounded-full h-2">
              <div class="bg-blue-500 h-2 rounded-full" style="width: <%= @card_key_result.key_result.progress_percentage %>%"></div>
            </div>
            <span class="text-sm text-gray-600">
              <%= @card_key_result.key_result.current_value.to_i %>/<%= @card_key_result.key_result.target_value.to_i %> <%= @card_key_result.key_result.unit %>
            </span>
          </div>
        </div>

        <% if @card_key_result.expected_impact.present? %>
          <div>
            <label class="block text-sm font-medium text-gray-700">Expected Impact</label>
            <p class="mt-1 text-sm text-gray-600 bg-gray-50 rounded p-2"><%= @card_key_result.expected_impact %></p>
          </div>
        <% end %>

        <div>
          <%= form.label :actual_impact, "Actual Impact", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :actual_impact,
              rows: 3,
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
              placeholder: "What was the actual impact on this key result?" %>
          <p class="mt-1 text-xs text-gray-500">Recording actual impact helps measure the effectiveness of this work.</p>
        </div>

        <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
          <%= link_to "Cancel", product_card_path(@product, @card), class: "text-sm text-gray-600 hover:text-gray-900" %>
          <%= form.submit "Save Impact",
              class: "bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
