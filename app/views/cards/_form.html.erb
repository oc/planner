<%= form_with model: [@product, card], class: "space-y-4" do |form| %>
  <% if card.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4">
      <ul class="list-disc list-inside text-sm text-red-700">
        <% card.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :title,
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
        autofocus: true %>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= form.label :card_type, class: "block text-sm font-medium text-gray-700" %>
      <%= form.select :card_type,
          Card.card_types.keys.map { |t| [t.humanize, t] },
          {},
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
          data: { action: "change->card-type#change" } %>
    </div>

    <div>
      <%= form.label :priority, class: "block text-sm font-medium text-gray-700" %>
      <%= form.select :priority,
          Card.priorities.keys.map { |p| [p.humanize, p] },
          {},
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>
  </div>

  <%= render partial: "cards/metadata_fields", locals: { card: card, form: form } %>

  <div>
    <%= form.label :stage, class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :stage,
        Card::STAGES.map { |s| [s.humanize, s] },
        {},
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description,
        rows: 4,
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
  </div>

  <div class="flex justify-end space-x-3 pt-4">
    <%= link_to "Cancel", product_path(@product), class: "text-sm text-gray-600 hover:text-gray-900" %>
    <%= form.submit card.persisted? ? "Update Card" : "Create Card",
        class: "bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700 cursor-pointer" %>
  </div>
<% end %>
