<%
  completed, total = card.gate_completion_count
  percentage = total > 0 ? (completed.to_f / total * 100).round : 0
%>
<div id="gate_progress_<%= card.id %>" class="flex items-center space-x-2">
  <div class="flex-1 bg-gray-200 rounded-full h-2">
    <div class="bg-green-500 h-2 rounded-full transition-all duration-300" style="width: <%= percentage %>%"></div>
  </div>
  <span class="text-xs text-gray-500 whitespace-nowrap"><%= completed %>/<%= total %></span>
</div>
