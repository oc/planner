<%= turbo_frame_tag "modal" do %>
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center z-50" data-controller="modal">
    <div class="bg-white rounded-lg shadow-xl w-full max-w-lg mx-4">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">New Card</h2>
      </div>
      <div class="p-6">
        <%= render "form", card: @card %>
      </div>
    </div>
  </div>
<% end %>
