<%
  status_colors = {
    "active" => "bg-blue-100 text-blue-800",
    "achieved" => "bg-green-100 text-green-800",
    "missed" => "bg-red-100 text-red-800",
    "abandoned" => "bg-gray-100 text-gray-800"
  }
%>

<%= turbo_frame_tag objective do %>
  <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
    <div class="p-4 border-b border-gray-100">
      <div class="flex items-start justify-between">
        <div class="flex-1">
          <div class="flex items-center space-x-2">
            <h3 class="text-lg font-medium text-gray-900"><%= objective.title %></h3>
            <span class="inline-block px-2 py-0.5 text-xs font-medium rounded <%= status_colors[objective.status] %>">
              <%= objective.status.humanize %>
            </span>
          </div>
          <% if objective.description.present? %>
            <p class="mt-1 text-sm text-gray-600"><%= objective.description %></p>
          <% end %>
        </div>
        <div class="flex items-center space-x-2 ml-4">
          <%= link_to "Edit", edit_objective_path(objective),
              class: "text-sm text-gray-500 hover:text-gray-700",
              data: { turbo_frame: "modal" } %>
          <%= button_to "Delete", objective_path(objective),
              method: :delete,
              class: "text-sm text-red-500 hover:text-red-700",
              data: { turbo_confirm: "Delete this objective and all its key results?" } %>
        </div>
      </div>

      <div class="mt-3">
        <div class="flex items-center justify-between text-sm text-gray-500 mb-1">
          <span>Overall Progress</span>
          <span><%= objective.progress_percentage %>%</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-2">
          <div class="bg-blue-600 h-2 rounded-full transition-all duration-300"
               style="width: <%= objective.progress_percentage %>%"></div>
        </div>
      </div>
    </div>

    <div class="p-4 space-y-3">
      <div class="flex items-center justify-between mb-2">
        <h4 class="text-sm font-medium text-gray-700">Key Results</h4>
        <%= link_to new_objective_key_result_path(objective),
            class: "text-xs text-blue-600 hover:text-blue-700",
            data: { turbo_frame: "modal" } do %>
          + Add Key Result
        <% end %>
      </div>

      <% objective.key_results.each do |kr| %>
        <%= render partial: "key_results/key_result", locals: { key_result: kr } %>
      <% end %>

      <% if objective.key_results.empty? %>
        <p class="text-sm text-gray-500 text-center py-4">No key results defined yet.</p>
      <% end %>
    </div>
  </div>
<% end %>
