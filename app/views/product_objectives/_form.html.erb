<%= form_with model: [product, objective], url: product_objectives_path(product), class: "p-4 space-y-4" do |form| %>
  <% if objective.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4">
      <ul class="list-disc list-inside text-sm text-red-700">
        <% objective.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :title,
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
        placeholder: "e.g., Launch MVP by Q1",
        autofocus: true %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description,
        rows: 2,
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
        placeholder: "What does success look like?" %>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= form.label :period, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :period,
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
          placeholder: "e.g., 2026-Q1" %>
    </div>
    <div>
      <%= form.label :status, class: "block text-sm font-medium text-gray-700" %>
      <%= form.select :status,
          Objective.statuses.keys.map { |s| [s.humanize, s] },
          {},
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>
  </div>

  <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
    <%= link_to "Cancel", product_objectives_path(product), class: "text-sm text-gray-600 hover:text-gray-900" %>
    <%= form.submit "Create Objective",
        class: "bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700 cursor-pointer" %>
  </div>
<% end %>
