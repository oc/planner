<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Products</h1>
    <%= link_to "New Product", new_product_path, class: "bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700" %>
  </div>

  <% if @products.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @products.each do |product| %>
        <%= link_to product_path(product), class: "block bg-white rounded-lg shadow hover:shadow-md transition-shadow p-6" do %>
          <h2 class="text-lg font-semibold text-gray-900"><%= product.name %></h2>
          <p class="text-sm text-gray-500 mt-1"><%= product.description.presence || "No description" %></p>
          <div class="mt-4 flex items-center text-sm text-gray-500">
            <span><%= product.cards.count %> cards</span>
            <span class="mx-2">â€¢</span>
            <span><%= product.members.count %> members</span>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-gray-500 mb-4">No products yet. Create your first product to get started.</p>
      <%= link_to "Create Product", new_product_path, class: "text-blue-600 hover:text-blue-700" %>
    </div>
  <% end %>
</div>
